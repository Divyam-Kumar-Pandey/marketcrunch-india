generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  creditsUsed Int      @default(0)
  creditsAvailable Int  @default(10)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prediction {
  id String @id @default(uuid())
  stockCode String 
  stockName String
  currentPrice Float
  priceChange Float
  priceChangePercentage Float
  predictedPriceIn30Days Float
  predictedPriceIn90Days Float
  predictedPriceIn180Days Float
  date LocalDate @default(now())
  signal String
  accuracy Int
  result String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([stockCode, date])
}
